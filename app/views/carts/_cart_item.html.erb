<div class="grid gap-2 grid-cols-3 border-slate-500 border-2 rounded p-4 items-center">
  <div class="p-2">
    <figure class="w-28">
      <%= product_cover(item.product) %>
    </figure>
  </div>
  <div>
    <h3 class="text-xl font-bold">
      <%= item.product.title %>
    </h3>
  </div>
  <div class="flex justify-between">
    <div><%= item.quantity %></div>

    <div>
      NT$ <%= item.product.price.to_i%>
    </div>
  </div>
</div>