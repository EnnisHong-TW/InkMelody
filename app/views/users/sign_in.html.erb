<h1 class="text-xl my-2">登入帳號</h1>


<%= form_with(url: sessions_path, scope: "user", data: { turbo: false }) do |f| %>
<section class="grid gap-4">
    <div>
        <%= f.label :email %>
        <%= f.email_field :email, class:"field" %>
    </div>
    <div>
        <%= f.label :password %>
        <%= f.password_field :password, class:"field" %>
    </div>
    <div class="ml-50">
        <%= f.submit '登入' , class: 'ink-btn' %>
    </div>
</section>
<% end %>